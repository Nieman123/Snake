<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_container"
            android:layout_alignParentTop="true">


    </RelativeLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/menu_buttons"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Start Game"

            android:id="@+id/start_game_button"

            android:layout_above="@+id/menu_buttons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@android:style/Widget.Material.Button.Borderless" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="Down"

            android:id="@+id/down_button"

        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_alignBottom="@+id/start_game_button"
        android:layout_alignEnd="@+id/up_button" />

    <Button
            android:layout_width="80dp"
            android:layout_height="70dp"

            android:text="Up"

            android:id="@+id/up_button"

        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_above="@+id/right_button"
        android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="Right"

            android:id="@+id/right_button"

        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_above="@+id/down_button"
        android:layout_toRightOf="@+id/down_button"
        android:layout_toEndOf="@+id/down_button" />

    <Button

        android:text="Left"

            android:id="@+id/left_button"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_height="70dp"
        android:layout_width="wrap_content"
        android:layout_above="@+id/down_button"
        android:layout_toLeftOf="@+id/down_button"
        android:layout_toStartOf="@+id/down_button" />
    <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Stop"

            android:id="@+id/pause_button"

            android:layout_alignBottom="@+id/menu_buttons"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>-->
</RelativeLayout>